{
    "sourceName": "泡泡中文",
    "sourceUrl": "https://m.paozww.com",
    "header":{
        "User-Agent":"Mozilla/5.0 (X11; Linux x86_64; rv:102.0) Gecko/20100101 Firefox/102.0",
        "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/avif,image/webp,*/*;q=0.8", 
        "Accept-Language": "zh-CN,zh;q=0.8,en-US;q=0.5,en;q=0.3"
    },
    "search":{
        "request":{
            "url":"https://m.paozww.com/search/",
            "type":"post",
            "encoding":"utf-8",
            "postBody":{ "searchKey":"${searchKey}" }
        },
        "list":"return html.getElementsByClassName('searchresult')[0].getElementsByClassName('wap_sort_novel'); ",
        "href":"return html.getElementsByClassName('sort_content')[0].getElementsByClassName('name')[0].getElementsByTagName('a')[0].href;",
        "name":"return html.getElementsByClassName('sort_content')[0].getElementsByClassName('name')[0].getElementsByTagName('a')[0].innerText;",
        "author":"return html.getElementsByClassName('sort_content')[0].getElementsByClassName('name')[0].innerText.match(/作者：.*/)[0].slice(3);",
        "latestChapter":"return html.getElementsByClassName('author')[0].innerText;",
        "nextUrl":"return null;"
    },
    "info":{
        "name":"return html.getElementsByClassName('book_details')[0].innerText;",
        "author":"return html.getElementsByClassName('info_t4')[0].innerText.slice(3);",
        "intro":"return html.getElementsByClassName('info_intro')[0].getElementsByTagName('p')[0].innerText;",
        "latestChapter":"return html.getElementsByClassName('info_t6')[0].getElementsByTagName('p')[0].innerTex; ",
        "tocUrl": "return html.getElementsByClassName('book_operation')[0].getElementsByTagName('div')[1].getElementsByTagName('a')[0].href;"
    },
    "toc":{
        "list":"return html.getElementsByClassName('info_newest')[0].getElementsByTagName('ul')[0].getElementsByTagName('li');",
        "name":"return html.getElementsByTagName('a')[0].innerText;",
        "href":"return html.getElementsByTagName('a')[0].href;",
        "nextUrl":"let a = html.getElementsByClassName('index-container')[0].getElementsByTagName('a')[1]; if(a.innerText == '下一页'){return a.href;}else{return null;}"
    },
    "content":{
        "text":"return html.getElementById('articlecon').innerText;",
        "nextUrl":"let href = null, text = '';for(const a of html.getElementsByClassName('nr_page')[0].getElementsByTagName('a')){ if(a.id == 'next'){ href = a.href; text = a.innerText; } } if(text == '下一页'){return href;}else{return null;}"
    }

}